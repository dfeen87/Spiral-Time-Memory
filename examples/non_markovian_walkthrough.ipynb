    "def simulate_environmental_memory(rho_init, coupling_strength=0.1, \n",
    "                                 bath_size=5, t_final=10.0, dt=0.05):\n",
    "    \"\"\"\n",
    "    Simulate qubit coupled to finite bath (environmental memory).\n",
    "    \n",
    "    Memory arises from system-bath correlations.\n",
    "    \"\"\"\n",
    "    # System Hamiltonian\n",
    "    H_S = 0.5 * np.array([[1, 0], [0, -1]], dtype=complex)\n",
    "    \n",
    "    # Simplified: track only system reduced dynamics\n",
    "    # with effective bath-induced memory\n",
    "    \n",
    "    rho = rho_init.copy()\n",
    "    history = [(0.0, rho.copy())]\n",
    "    times = [0.0]\n",
    "    \n",
    "    # Bath correlation time (finite)\n",
    "    tau_bath = 2.0\n",
    "    \n",
    "    t = 0.0\n",
    "    while t < t_final:\n",
    "        # Hamiltonian evolution\n",
    "        drho_H = -1j * (H_S @ rho - rho @ H_S)\n",
    "        \n",
    "        # Environmental memory (state-dependent)\n",
    "        # Key: depends on current state!\n",
    "        drho_bath = np.zeros_like(rho)\n",
    "        \n",
    "        for t_past, rho_past in history:\n",
    "            if t - t_past < 3 * tau_bath:  # Finite bath memory\n",
    "                # State-dependent kernel\n",
    "                overlap = np.abs(np.trace(rho @ rho_past))\n",
    "                K_env = coupling_strength * overlap * np.exp(-(t - t_past)/tau_bath)\n",
    "                drho_bath += K_env * rho_past * dt\n",
    "        \n",
    "        rho = rho + (drho_H + drho_bath) * dt\n",
    "        rho = (rho + rho.conj().T) / 2\n",
    "        rho = rho / np.trace(rho)\n",
    "        \n",
    "        t += dt\n",
    "        history.append((t, rho.copy()))\n",
    "        times.append(t)\n",
    "    \n",
    "    return times, history\n",
    "\n",
    "\n",
    "def simulate_intrinsic_memory(rho_init, epsilon=0.1, t_final=10.0, dt=0.05):\n",
    "    \"\"\"\n",
    "    Simulate qubit with intrinsic temporal memory.\n",
    "    \n",
    "    Memory is state-independent and fundamental.\n",
    "    \"\"\"\n",
    "    H_S = 0.5 * np.array([[1, 0], [0, -1]], dtype=complex)\n",
    "    \n",
    "    rho = rho_init.copy()\n",
    "    history = [(0.0, rho.copy())]\n",
    "    times = [0.0]\n",
    "    \n",
    "    t = 0.0\n",
    "    while t < t_final:\n",
    "        drho_H = -1j * (H_S @ rho - rho @ H_S)\n",
    "        \n",
    "        # Intrinsic memory (state-independent)\n",
    "        # Key: kernel does NOT depend on current state!\n",
    "        drho_memory = np.zeros_like(rho)\n",
    "        \n",
    "        for t_past, rho_past in history:\n",
    "            # State-independent exponential kernel\n",
    "            K_intrinsic = epsilon * np.exp(-(t - t_past))\n",
    "            drho_memory += K_intrinsic * rho_past * dt\n",
    "        \n",
    "        rho = rho + (drho_H + drho_memory) * dt\n",
    "        rho = (rho + rho.conj().T) / 2\n",
    "        rho = rho / np.trace(rho)\n",
    "        \n",
    "        t += dt\n",
    "        history.append((t, rho.copy()))\n",
    "        times.append(t)\n",
    "    \n",
    "    return times, history\n",
    "\n",
    "\n",
    "# Compare environmental vs. intrinsic\n",
    "rho_init = 0.5 * np.array([[1, 1], [1, 1]], dtype=complex)  # |+‚ü©\n",
    "\n",
    "times_env, history_env = simulate_environmental_memory(rho_init)\n",
    "times_int, history_int = simulate_intrinsic_memory(rho_init)\n",
    "\n",
    "# Extract coherence |œÅ‚ÇÄ‚ÇÅ|\n",
    "coherence_env = [np.abs(h[1][0,1]) for h in history_env]\n",
    "coherence_int = [np.abs(h[1][0,1]) for h in history_int]\n",
    "\n",
    "fig, axes = plt.subplots(1, 2, figsize=(14, 5))\n",
    "\n",
    "# Coherence evolution\n",
    "axes[0].plot(times_env, coherence_env, 'b-', linewidth=2, \n",
