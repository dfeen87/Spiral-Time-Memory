   "source": [
    "def trace_distance(rho1, rho2):\n",
    "    \"\"\"Compute trace distance between two density matrices.\"\"\"\n",
    "    diff = rho1 - rho2\n",
    "    eigenvalues = np.linalg.eigvalsh(diff @ diff.conj().T)\n",
    "    return 0.5 * np.sum(np.sqrt(np.abs(eigenvalues)))\n",
    "\n",
    "\n",
    "class NonMarkovianQubit:\n",
    "    \"\"\"Qubit evolution with memory for non-Markovianity tests.\"\"\"\n",
    "    \n",
    "    def __init__(self, kernel_type='exponential', epsilon=0.1):\n",
    "        self.kernel_type = kernel_type\n",
    "        self.epsilon = epsilon\n",
    "        self.kernel = MemoryKernel()\n",
    "    \n",
    "    def evolve_pair(self, rho1_init, rho2_init, t_final, dt=0.02):\n",
    "        \"\"\"\n",
    "        Evolve two initial states and track trace distance.\n",
    "        \n",
    "        Returns trace distance history.\n",
    "        \"\"\"\n",
    "        sigma_z = np.array([[1, 0], [0, -1]], dtype=complex)\n",
    "        H = 0.5 * sigma_z\n",
    "        \n",
    "        rho1 = rho1_init.copy()\n",
    "        rho2 = rho2_init.copy()\n",
    "        \n",
    "        history1 = [(0.0, rho1.copy())]\n",
    "        history2 = [(0.0, rho2.copy())]\n",
    "        distances = [trace_distance(rho1, rho2)]\n",
    "        times = [0.0]\n",
    "        \n",
    "        t = 0.0\n",
    "        while t < t_final:\n",
    "            # Evolve both states\n",
    "            for rho, history in [(rho1, history1), (rho2, history2)]:\n",
    "                # Hamiltonian evolution\n",
    "                drho_H = -1j * (H @ rho - rho @ H)\n",
    "                \n",
    "                # Memory contribution\n",
    "                drho_mem = np.zeros_like(rho)\n",
    "                for t_past, rho_past in history:\n",
    "                    if t_past < t:\n",
    "                        if self.kernel_type == 'exponential':\n",
    "                            K = self.kernel.exponential(t - t_past, self.epsilon)\n",
    "                        elif self.kernel_type == 'oscillatory':\n",
    "                            K = self.kernel.oscillatory(t - t_past, self.epsilon)\n",
    "                        else:\n",
    "                            K = self.kernel.power_law(t - t_past, self.epsilon)\n",
    "                        \n",
    "                        drho_mem += K * rho_past * dt\n",
    "                \n",
    "                # Update\n",
    "                drho = drho_H + drho_mem\n",
    "                rho += drho * dt\n",
    "                \n",
    "                # Ensure physicality\n",
    "                rho[:] = (rho + rho.conj().T) / 2\n",
    "                rho[:] = rho / np.trace(rho)\n",
    "            \n",
    "            t += dt\n",
    "            history1.append((t, rho1.copy()))\n",
    "            history2.append((t, rho2.copy()))\n",
    "            \n",
    "            # Compute trace distance\n",
    "            D = trace_distance(rho1, rho2)\n",
    "            distances.append(D)\n",
    "            times.append(t)\n",
    "        \n",
    "        return np.array(times), np.array(distances)\n",
    "\n",
    "\n",
    "# Test with different kernels\n",
    "rho1_init = np.array([[1, 0], [0, 0]], dtype=complex)  # |0‚ü©\n",
    "rho2_init = np.array([[0, 0], [0, 1]], dtype=complex)  # |1‚ü©\n",
    "\n",
    "fig, axes = plt.subplots(1, 3, figsize=(16, 4))\n",
    "\n",
    "kernel_types = ['exponential', 'oscillatory', 'power_law']\n",
    "titles = ['Exponential Kernel', 'Oscillatory Kernel', 'Power-Law Kernel']\n",
    "\n",
    "for ax, ktype, title in zip(axes, kernel_types, titles):\n",
    "    qubit = NonMarkovianQubit(kernel_type=ktype, epsilon=0.15)\n",
    "    times, distances = qubit.evolve_pair(rho1_init, rho2_init, t_final=15.0)\n",
    "    \n",
    "    ax.plot(times, distances, 'b-', linewidth=2)\n",
    "    ax.set_xlabel('Time t', fontsize=11)\n",
    "    ax.set_ylabel('Trace Distance D(œÅ‚ÇÅ, œÅ‚ÇÇ)', fontsize=11)\n",
    "    ax.set_title(title, fontsize=12)\n",
    "    ax.grid(True, alpha=0.3)\n",
    "    \n",
    "    # Check for non-monotonicity\n",
    "    diff = np.diff(distances)\n",
    "    increases = np.sum(diff > 1e-6)\n",
    "    \n",
    "    if increases > 10:\n",
    "        ax.text(0.5, 0.95, '‚úì Non-Markovian\\n(distance increases)', \n",
    "                transform=ax.transAxes, fontsize=10,\n",
    "                verticalalignment='top', bbox=dict(boxstyle='round', \n",
    "                facecolor='lightgreen', alpha=0.5))\n",
    "    else:\n",
    "        ax.text(0.5, 0.95, '‚úó Quasi-Markovian\\n(monotonic decay)', \n",
    "                transform=ax.transAxes, fontsize=10,\n",
    "                verticalalignment='top', bbox=dict(boxstyle='round', \n",
    "                facecolor='lightyellow', alpha=0.5))\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.show()\n",
    "\n",
    "print(\"\\nüìä Non-Markovian Signatures:\")\n",
    "print(\"  - Oscillatory kernel: Clear distance increases (information backflow)\")\n",
    "print(\"  - Exponential: Mostly monotonic (weak non-Markovianity)\")\n",
    "print(\"  - Power-law: Slow decay with possible increases\")"
   ]
