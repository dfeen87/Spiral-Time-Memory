    "class MemoryKernel:\n",
    "    \"\"\"Implements various memory kernel types.\"\"\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def exponential(dt, epsilon=0.1, gamma=1.0):\n",
    "        \"\"\"Exponential decay kernel.\"\"\"\n",
    "        return epsilon * np.exp(-gamma * dt)\n",
    "    \n",
    "    @staticmethod\n",
    "    def power_law(dt, epsilon=0.1, gamma=1.0, alpha=1.5):\n",
    "        \"\"\"Power-law (algebraic) kernel.\"\"\"\n",
    "        return epsilon / (1 + gamma * dt)**alpha\n",
    "    \n",
    "    @staticmethod\n",
    "    def oscillatory(dt, epsilon=0.1, gamma=0.5, omega=3.0):\n",
    "        \"\"\"Oscillatory (recurrent) kernel.\"\"\"\n",
    "        return epsilon * np.exp(-gamma * dt) * np.cos(omega * dt)\n",
    "    \n",
    "    @staticmethod\n",
    "    def gaussian(dt, epsilon=0.1, tau=1.0):\n",
    "        \"\"\"Gaussian kernel (intermediate timescale).\"\"\"\n",
    "        return epsilon * np.exp(-(dt/tau)**2)\n",
    "\n",
    "\n",
